<p id="notice"><%= notice %></p>

<h1>Subject Roles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subject_roles.each do |subject_role| %>
      <tr>
        <td><%= subject_role.name %></td>
        <td><%= link_to 'Show', subject_role %></td>
        <td><%= link_to 'Edit', edit_subject_role_path(subject_role) %></td>
        <td><%= link_to 'Destroy', subject_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

